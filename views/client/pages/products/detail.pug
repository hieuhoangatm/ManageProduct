extends ../../layouts/default.pug


block main
  .container.my-3
    .row  
      .col-12
        if (product.title)
          h1(class="mb-4") #{product.title}

        if (product.price)
          div(class="mb-4") Giá: <b>#{product.price}$</b>       

        if (product.discountPercentage)
          div(class="mb-4") Giảm tới: <span>#{product.discountPercentage}%</span>

        if (product.stock)
          div(class="mb-4") Còn lại: <span>#{product.stock}</span> Sản phẩm

        if (product.thumbnail)
          div(class="mb-4")
            img(
              src=product.thumbnail
              style="width: 100px"
            )

        if (product.status)
          div(class="mb-4")
            span Trang thai: 
              if (product.status ==="active")
                span(class="badge badge-success") Hoat dong
              else 
                span(class="badge badge-danger") Dung hoat dong
        
        if (product.position)
          div(class="mb-4") Vi tri: <b>#{product.position}</b>

        if (product.description)
          div(class="mb-4") Mo ta: <b>#{product.description}</b>